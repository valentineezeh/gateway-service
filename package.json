{
  "name": "gateway-service",
  "version": "1.0.0",
  "description": "Master device that control multiple peripheral devices",
  "main": "index.js",
  "scripts": {
    "start": "npm run prod",
    "prod": "cross-env NODE_ENV=production npm-run-all build server",
    "build": "npm-run-all clean transpile",
    "clean": "rimraf ./dist",
    "transpile": "babel ./src --out-dir dist --copy-files",
    "server": "node dist/index.js",
    "dev": "nodemon --watch src --delay 250ms --exec babel-node src/index.js --ignore tests/",
    "test": "cross-env NODE_ENV=test nyc --reporter=html mocha --require babel-core/register src/test/index.js --timeout 10000 --exit && nyc report"
  },
  "dependencies": {
    "amqplib": "^0.5.5",
    "axios": "0.19.2",
    "bcryptjs": "2.4.3",
    "bluebird": "^3.7.2",
    "body-parser": "1.19.0",
    "core-util-is": "1.0.2",
    "cors": "2.8.5",
    "dotenv": "7.0.0",
    "errorhandler": "1.5.1",
    "expect.js": "0.3.1",
    "express": "4.16.4",
    "express-validator": "5.3.1",
    "factory-girl": "5.0.4",
    "faker": "4.1.0",
    "helmet": "3.18.0",
    "is-empty": "1.2.0",
    "is-ip": "^3.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "3.5.2",
    "mongoose": "5.8.11",
    "mongoose-float": "^1.0.4",
    "morgan": "1.9.1",
    "nodemon": "1.18.11",
    "npm-run-all": "^4.1.5",
    "rimraf": "2.6.3",
    "winston": "3.2.1",
    "winston-daily-rotate-file": "^4.4.2"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-preset-env": "1.7.0",
    "babel-plugin-add-module-exports": "1.0.2",
    "babel-plugin-transform-async-to-generator": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "chai": "4.1.2",
    "chai-http": "4.0.0",
    "cross-env": "5.2.0",
    "eslint": "5.15.2",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "2.16.0",
    "mocha": "6.1.4",
    "mocha-lcov-reporter": "1.3.0",
    "nock": "10.0.1",
    "nodemon": "1.18.3",
    "nyc": "13.0.1",
    "should": "13.2.3",
    "supertest": "4.0.2"
  },
  "engines": {
    "node": "11.10.1",
    "npm": "6.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/valentineezeh/gateway-service.git"
  },
  "author": "Valentine ezeh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/valentineezeh/gateway-service/issues"
  },
  "homepage": "https://github.com/valentineezeh/gateway-service#readme"
}
